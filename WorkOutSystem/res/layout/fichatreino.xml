<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_padrao"
    android:orientation="vertical" >

    <TabHost
        android:id="@+id/host_treino"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <!-- Tab treino -->

                <LinearLayout
                    android:id="@+id/tab_treino"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout style="@style/linearLayoutPadraoVertical">

                        <TextView
                            style="@style/textopequeno"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/label_treino" />

                        <EditText
                            android:id="@+id/edt_nomeTreino"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" 
                            android:maxLines="1"/>

                        <Spinner
                            android:id="@+id/cbx_buscaexercicio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:prompt="@string/label_grupo_muscular" />

                        <ListView
                            android:id="@+id/list_busca"
                            android:layout_width="fill_parent"
                            android:choiceMode="multipleChoice"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:divider="@android:color/transparent" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Tab exercicio/treino -->
                <LinearLayout
                    android:id="@+id/tab_exercicio_treino"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ListView
                        android:id="@+id/list_exercicio"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:divider="@android:color/transparent" />
                </LinearLayout>

                <!-- Tab especificacao -->
                <LinearLayout
                    android:id="@+id/tab_especificacao"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ListView
                        android:id="@+id/list_especificacao"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:divider="@android:color/transparent" />
                    
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</LinearLayout>