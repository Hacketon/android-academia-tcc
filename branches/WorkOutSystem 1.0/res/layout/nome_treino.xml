<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_padrao"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:orientation="vertical"
        android:padding="5dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:weightSum="100">

        <EditText
            android:id="@+id/txt_NomeTreino"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="1" 
            android:layout_weight="50"/>
        <TextView 
            android:id="@+id/txt_codigoTreino"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_weight="50"
            />
        
    </LinearLayout>

    
    <LinearLayout
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="100"
        android:gravity="bottom"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">

        <Button
            android:id="@+id/btn_confirmarNome"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="@string/botao_confirmar" />

        <Button
            android:id="@+id/btn_cancelarNome"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="@string/botao_cancelar" />
    </LinearLayout>

</LinearLayout>