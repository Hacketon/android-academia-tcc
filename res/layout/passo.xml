<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_padrao"
    android:orientation="vertical"
    >
    
    

    <LinearLayout
        style="@style/linearLayoutPadraoHorizontal"
         >
        <TextView
            android:id="@+id/txt_nome_exercicio"
            style="@style/textomedio"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/label_exercicio" />
        
        
    </LinearLayout>
    
    
    
    <LinearLayout
        style="@style/linearLayoutPadraoHorizontal"
        android:weightSum="100" 
        >

        <Button
            android:id="@+id/btn_anteriorpasso"
            style="@style/textopequenopreto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:onClick="onClick"
            android:text="@string/label_anterior" />

        <TextView
            android:id="@+id/txt_sequenciapasso"
            style="@style/textopequeno"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:gravity="center"
            android:text="@string/label_passos" />

        <Button
            android:id="@+id/btn_proximopasso"
            style="@style/textopequenopreto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:onClick="onClick"
            android:text="@string/label_proximo" />
    </LinearLayout>
    
    <LinearLayout 
        style="@style/linearLayoutPadraoHorizontal"
        android:padding="20dp"
        android:layout_weight="1">
        
          <TextView
            android:id="@+id/txt_descricao_passo"
            style="@style/textopequeno"
            android:gravity="top"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/label_descricao_passo" />
        
        
    </LinearLayout>
    

</LinearLayout>