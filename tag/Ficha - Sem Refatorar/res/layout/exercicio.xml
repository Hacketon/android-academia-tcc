<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_padrao"
    android:orientation="vertical" >

    <TabHost
        android:id="@+id/hospedeiro"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <!-- Tab exercicios padrÃ£o -->

                <LinearLayout
                    android:id="@+id/tabpadrao"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <Spinner
                            android:id="@+id/cbx_grupopadrao"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:prompt="@string/label_grupo_muscular" />

                        <ListView
                            android:id="@+id/listapadrao"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:divider="@android:color/transparent"
                            android:layout_weight="1" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Tab exercicio criado -->

                <LinearLayout
                    android:id="@+id/tabcriado"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <Spinner
                        android:id="@+id/cbx_grupocriado"
                        style="@style/AppTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:prompt="@string/label_grupo_muscular" />

                    <ListView
                        android:id="@+id/listacriado"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:divider="@android:color/transparent"
                        android:layout_weight="1" />

                    <LinearLayout 
                        style="@style/linearLayoutPadraoHorizontal"
                        android:weightSum="100">
                        
                    <Button
                        android:layout_weight="50"
                        android:id="@+id/btn_add"
                        style="@style/textopequenopreto"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:onClick="onClick"
                        android:text="@string/botao_adicionar" />
                    
                    <Button
                        android:layout_weight="50"
                        android:id="@+id/btn_exc_exercicio"
                        style="@style/textopequenopreto"
                        android:layout_width="fill_parent" 
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:onClick="onClick"
                        android:text="@string/botao_excluir"
                        />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</LinearLayout>