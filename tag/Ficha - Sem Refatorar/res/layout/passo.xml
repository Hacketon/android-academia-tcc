<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_padrao"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/linearLayoutPadraoVertical"
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/txt_nome_exercicio"
            style="@style/textogrande"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/label_exercicio" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#4682B4"
        android:orientation="horizontal"
        android:weightSum="100" >

        <TextView
            android:id="@+id/linhaDesign"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#191970"
        android:orientation="horizontal"
        android:weightSum="100" >

        <TextView
            android:id="@+id/linhaDesign2"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#4682B4"
        android:orientation="horizontal"
        android:weightSum="100" >

        <TextView
            android:id="@+id/linhaDesign3"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        style="@style/linearLayoutPadraoHorizontal"
        android:layout_width="match_parent"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:weightSum="100" >

        <ImageButton
            android:id="@+id/btn_anteriorpasso"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:background="@android:color/transparent"
            android:onClick="onClick"
            android:src="@drawable/ic_setaesquerda"
            android:text="@string/label_anterior" />

        <TextView
            android:id="@+id/txt_sequenciapasso"
            style="@style/textomedio"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:gravity="center"
            android:text="@string/label_passos"
            android:textStyle="italic" />

        <ImageButton
            android:id="@+id/btn_proximopasso"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:background="@android:color/transparent"
            android:onClick="onClick"
            android:src="@drawable/ic_setadireita"
            android:text="@string/label_proximo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#4682B4"
        android:orientation="horizontal"
        android:weightSum="100" >

        <TextView
            android:id="@+id/linhaDesign"
            android:layout_width="2dp"
            android:layout_height="3dp"
            android:gravity="center" />
    </LinearLayout>

    <ScrollView style="@style/linearLayoutPadraoVertical" >

        <LinearLayout
            style="@style/linearLayoutPadraoVertical"
            android:padding="20dp" >

            <ImageView
                android:id="@+id/imagemExercicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp" />

            <TextView
                android:id="@+id/txt_descricao_passo"
                style="@style/textopequeno"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="5dp"
                android:text="@string/label_descricao_passo" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </ImageView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>