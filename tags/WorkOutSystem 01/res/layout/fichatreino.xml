<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_padrao"
    android:orientation="vertical" >

    <!-- Ficha treinos -->

    <LinearLayout
        android:id="@+id/tabfichastreino"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            style="@style/textopequeno"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="@string/label_treino" />

        <EditText
            android:id="@+id/ed_sequencia"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"/>

        <TextView
            style="@style/textopequeno"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="@string/title_activity_tela_exercicio" />
        <ListView
            android:id="@+id/listaexercicios"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:divider="@android:color/white" />

    </LinearLayout>

</LinearLayout>