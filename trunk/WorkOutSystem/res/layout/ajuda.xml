<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_padrao"
    android:orientation="vertical" 
    android:gravity="center">

    
    <LinearLayout 
        style="@style/linearLayoutPadraoVertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="horizontal"
        android:padding="20dp"
        android:weightSum="120" >

        <Button
            android:id="@+id/btn_ajudaperfil"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:onClick="onClick"
            android:text="@string/botao_perfil" />

        <Button
            android:id="@+id/btn_ajudaexercicio"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:onClick="onClick"
            android:text="@string/botao_exercicio" />

        <Button
            android:id="@+id/btn_ajudarotina"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:onClick="onClick"
            android:text="@string/botao_rotina" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="horizontal"
        android:padding="20dp"
        android:weightSum="120" >

        <Button
            android:id="@+id/btn_ajudaficha"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:onClick="onClick"
            android:text="@string/botao_ficha" />

        <Button
            android:id="@+id/btn_ajudaevolucao"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:onClick="onClick"
            android:text="@string/botao_evolucao" />

        <Button
            android:id="@+id/btn_ajuda"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:enabled="false"
            android:onClick="onClick"
            android:text="@string/botao_ajuda"
            android:visibility="invisible" />
    </LinearLayout>

    </LinearLayout>
</LinearLayout>