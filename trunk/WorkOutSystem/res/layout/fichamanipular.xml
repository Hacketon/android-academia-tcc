<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_padrao"
    android:orientation="vertical" >

    <ScrollView style="@style/linearLayoutPadraoVertical" >

        <TabHost
            android:id="@+id/hostfichatreino"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </TabWidget>

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <!-- Fichas -->

                    <LinearLayout
                        android:id="@+id/tabfichas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp" >

                        <TextView
                            style="@style/textopequeno"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/title_activity_tela_ficha" />

                        <EditText
                            android:id="@+id/edt_nomeFicha"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1" />

                        <TextView
                            style="@style/textopequeno"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/label_duracaodias" />

                        <EditText
                            android:id="@+id/edt_duracaodias"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1" 
                            android:inputType="number"/>

                        <TextView
                            style="@style/textopequeno"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/botao_objetivo" />

                        <Spinner
                            android:layout_weight="0"
                            android:id="@+id/cbx_fichaobjetivo"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:prompt="@string/botao_objetivo" />

                        <TextView
                            style="@style/textopequeno"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/label_descricao" />

                        <EditText
                            android:id="@+id/edt_objetivoFicha"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="textMultiLine"
                            android:maxLength="100" />
                    </LinearLayout>

                    <!-- Treinos -->

                    <LinearLayout
                        android:id="@+id/tabfichatreinos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <ListView
                            android:id="@+id/listafichastreino"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </TabHost>
    </ScrollView>

</LinearLayout>