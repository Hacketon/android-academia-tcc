<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_padrao"
    android:orientation="vertical" 
    android:padding="5dp">

    <TabHost
        android:id="@+id/hostrotina"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="fill_parent" >

                <!-- Tab de treino -->

                <LinearLayout
                    android:id="@+id/tabtreino"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="300" >

                    <LinearLayout
                        style="@style/linearLayoutPadraoHorizontal"
                        android:layout_height="wrap_content"
                        android:layout_weight="50" >

                        <TextView
                            android:id="@+id/diaSemana"
                            style="@style/textomedio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_diasemana" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#191970"
                        android:gravity="left"
                        android:orientation="vertical"
                        android:weightSum="100" >

                        <TextView
                            android:id="@+id/linhaDesignPrin"
                            android:layout_width="1dp"
                            android:layout_height="2dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#B0C4DE"
                        android:gravity="left"
                        android:orientation="vertical"
                        android:weightSum="100" >

                        <TextView
                            android:id="@+id/linhaDesignPrin"
                            android:layout_width="1dp"
                            android:layout_height="2dp" />
                    </LinearLayout>
                    <!-- Ficha Atual -->

					
                    <LinearLayout
                        style="@style/linearLayoutPadraoVertical"
                        android:layout_weight="100" >

                        <Spinner
                            android:id="@+id/combo_treinos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:prompt="@string/label_treino" 
                            
                            />
                    </LinearLayout>
                    
                    <LinearLayout
                        style="@style/linearLayoutPadraoHorizontal"
                        android:layout_weight="50"
                        android:weightSum="100" >

                        
                        <TextView
                            style="@style/textomedio"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:gravity="left"
                            android:paddingLeft="20dp"
                            android:text="@string/label_ficha_atual" />

                        <TextView
                            android:id="@+id/nome_ficha_atual"
                            style="@style/textomedio"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:text="" />
                    </LinearLayout>

                    <!-- Ultimo Treino -->

                    <LinearLayout
                        style="@style/linearLayoutPadraoHorizontal"
                        android:layout_weight="50"
                        android:weightSum="100" >

                        <TextView
                            style="@style/textomedio"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:gravity="left"
                            android:paddingLeft="20dp"
                            android:text="@string/label_ultimo_treino" />

                        <TextView
                            android:id="@+id/ultimo_treino"
                            style="@style/textomedio"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:text="" />
                    </LinearLayout>

                    <!-- Layout Combo Treino -->


                    <LinearLayout
                        style="@style/linearLayoutPadraoHorizontal"
                        android:layout_gravity="bottom"
                        android:layout_weight="50" >

                        
                    </LinearLayout>
                </LinearLayout>

                <!-- Tab de Calendario -->

                <LinearLayout
                    android:id="@+id/tabcalendario"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="100" >

                    <LinearLayout
                        style="@style/linearLayoutPadraoHorizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:gravity="center"
                        android:weightSum="100" >

                        <ImageButton
                            android:id="@+id/btn_anteriormes"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="40"
                            android:background="@android:color/transparent"
                            android:onClick="onClick"
                            android:src="@drawable/ic_setaesquerda" />

                        <TextView
                            android:id="@+id/txt_mes"
                            style="@style/textomedio"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="20"
                            android:gravity="center"
                            android:text="@string/calendario_mes" />

                        <ImageButton
                            android:id="@+id/btn_proximomes"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="40"
                            android:background="@android:color/transparent"
                            android:onClick="onClick"
                            android:src="@drawable/ic_setadireita" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/linearLayoutPadraoHorizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="70"
                        android:gravity="center" >

                        <GridView
                            android:id="@+id/calendariogrid"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:horizontalSpacing="5dp"
                            android:numColumns="7"
                            android:stretchMode="columnWidth"
                            android:verticalSpacing="5dp" >
                        </GridView>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</LinearLayout>